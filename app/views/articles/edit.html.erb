<div class="pages-container">
  <div class="space-bg">
    <h1 class="text-center edit-article-title">
      Edit article
    </h1>
    <div class="d-flex justify-content-center align-items-center sign-card-container">
      <div class="ttm-card-bg edit-user-card d-flex flex-column justify-content-center new-article-card">
        <%= form_tag url_for(action: "update"), method: "put" do %>
          <div class="form-group article-edit-form-inputs">
            <%= label_tag 'Title' %>
            <br/>
            <%= text_field_tag 'title', @article.title %>
          </div>
          <div class="form-group article-edit-form-inputs">
            <%= label_tag 'Content' %>
            <br>
            <%= text_area_tag 'content', @article.content %>
          </div>
          <div class="form-group article-edit-form-inputs">
            <%= label_tag 'Tag' %>
            <br>
            <%= text_field_tag 'tag', @tag %>
          </div>
            <%= submit_tag "Update article", class: "btn sign-ttm-btn update-article-btn" %>
          <% end %>
          <%= form_tag article_pictures_path(@article.id), multipart: true do %>
            <%= file_field_tag :picture %>
            <%= submit_tag "Update picture", class: "update-article-img-update" %>
          <% end %>

      </div>
    </div>
  </div>
</div>

