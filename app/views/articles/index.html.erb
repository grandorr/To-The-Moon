<%= form_tag articles_path,:method => :get do %>
  <%= text_field_tag 'content'%><br>
  <%= submit_tag "Search article" %>
<% end %>
<br/><br/>
<%= link_to "New article", new_article_path %>
<br/><br/>

<% unless @articles == nil %>
	<% @articles.each do |article| %>
		<%= link_to article.title, article_path(article.id) %><br>
		<%= "Author : " %> 
		<%= link_to article.user.email, profile_path(article.user.id) %><br> 
		<%= article.tag.name %><br>
		<br/><br/>
	<% end %>
<% end %>