<%= form_tag url_for(action: "create"), method: "post", multipart: true do %>
  <h1 class="h3 mb-3 font-weight-normal text-center">New article</h1>
  <div class="form-group">
    <%= label_tag 'Title' %><br />
    <%= text_field_tag 'title'%>
  </div>
  <div class="form-group">
    <%= label_tag 'Content' %>  <br>
    <%= text_field_tag 'content' %>
  </div>
  <div class="form-group">
    <%= label_tag 'Tag' %>  <br>
    <%= text_field_tag 'tag' %>
  </div>

    <%= file_field_tag :picture %>


  <div class="actions mt-5">
    <%= submit_tag "Create article", class: "btn btn-lg btn-secondary btn-block" %>
  </div>
<% end %>
