<div class="pages-container">
  <div class="space-bg">
    <div class="news-container">
      <h1 class="page-title text-center">
        New article
      </h1>
      <div class="d-flex justify-content-center">
        <div class="ttm-card-bg edit-user-card d-flex justify-content-center">
          <%= form_tag url_for(action: "create"), method: "post", multipart: true do %>
            <div class="form-group">
              <%= label_tag 'Title' %><br />
              <%= text_field_tag 'title', "", class: "form-control"%>
            </div>
            <div class="form-group">
              <%= label_tag 'Content' %>  <br>
              <%= text_area_tag 'content', "", class: "form-control" %>
            </div>
            <div class="form-group">
              <%= label_tag 'Tag' %>  <br>
              <%= text_field_tag 'tag', "", class: "form-control" %>
            </div>

              <%= file_field_tag :picture, class: "image-upload-container" %>

            <div class="actions d-flex justify-content-center">
              <%= submit_tag "Create article", class: "btn sign-ttm-btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
