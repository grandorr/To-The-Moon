<div class="pages-container">
	<div class="space-bg">
		<div class="news-container">
			<h1 class="page-title text-center">
    			Cryptocurrencies

    		</h1>
				<h2>
				<%= form_tag cryptolist_path,class: "search-articles-form", :method => :get do %>

						<%= text_field_tag 'content', "",class: "new-article-input-textarea" %>
						<%= submit_tag "Search crypto", class: "btn new-article-input-btn" %>

				<% end %>
				</h2>
				<% if @coin_list != nil %>
					<%= render "global" %>
				<% end %>

			<% n = @n.to_s %>

			<%= render "coinlist" %>
			<% if @coin_list != nil %>
			<% if @coin_list.length != 1  %>
			<center><%= render "naviguate_page" %></center>
			<% else %>
			<a class="btn btn-secondary" <%= link_to "all cryptocurrencies", cryptolist_path(0)  %>
			<% end %>

			<% end %>

		</div>
	</div>
</div>
