<div class="pages-container">
  <div class="space-bg">
    <div class="news-container">
      <div class="d-flex justify-content-center">
        <div class="profile-card-container d-flex justify-content-center">
          <%= @user.email %>
          <%= @user.id %>
          <%= form_tag url_for(action: "create"), method: "post" do %>
            <h1 class="h3 mb-3 font-weight-normal text-center">New message</h1>
            <div class="form-group">
              <%= label_tag 'Content' %>  <br>
              <%= text_field_tag 'content' %>
            </div>
            <%= hidden_field_tag "recipient", @user.id %>
            <%= hidden_field_tag "checker", true %>
            <div class="actions mt-5">
              <%= submit_tag "Create article", class: "btn btn-lg btn-secondary btn-block" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>